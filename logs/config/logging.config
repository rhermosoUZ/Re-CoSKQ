[loggers]
keys=root

[handlers]
keys=debug,info,warning

[formatters]
keys=standard

[formatter_standard]
format=%(asctime)s %(levelname)s %(name)s %(message)s

[handler_debug]
class=handlers.RotatingFileHandler
level=DEBUG
formatter=standard
args=('../logs/debug.log', 'a', 2000000, 4)

[handler_info]
class=handlers.RotatingFileHandler
level=INFO
formatter=standard
args=('../logs/info.log', 'a', 2000000, 4)

[handler_warning]
class=handlers.RotatingFileHandler
level=WARNING
formatter=standard
args=('../logs/warning.log', 'a', 2000000, 4)

[logger_root]
handlers=debug,info,warning
level=DEBUG